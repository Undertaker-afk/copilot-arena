{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "out",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "media/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}